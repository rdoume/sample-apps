search site {


document site {

	field language type string{
	indexing: 'en' | set_language
	}
	
        field text type string {
         
	normalizing:none  
	indexing: attribute 
        }

        field title type string {
        
	stemming:none 
        normalizing:none
        indexing: attribute
        }

        field uri type string {
                   
				 }

    }


    
    fieldset default {
        fields: title, text
    }


    rank-profile post inherits default {

        first-phase {
            expression:nativeRank(title, text)
        }
   }


 
}
