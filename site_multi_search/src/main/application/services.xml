<services version='1.0'>
  <admin version="2.0">
      <adminserver hostalias="admin0"/>
      <configservers>
        <configserver hostalias="admin0"/>
        </configservers>
    </admin>
 
 <container id='container' version='1.0'>
    <search/>
    <document-api/>
    <nodes>
      <node hostalias="stateless1"/>
    </nodes>
    <document-processing preferlocalnode="true"/>
  </container>

  <content id='site' version='1.0'>
    <redundancy>1</redundancy>
    <search>
      <visibility-delay>1</visibility-delay>
    </search>
    <documents>
      <document mode='index' type='site'/>
    </documents>
    <nodes>
      <node hostalias="content2" distribution-key="2"/>
    </nodes>

    <engine>
      <proton>
        <searchable-copies>1</searchable-copies>
        <visibility-delay>1</visibility-delay>
        <resource-limits>
          <disk>0.99</disk>
          <memory>0.95</memory>
         </resource-limits>
      </proton>
    </engine>
  </content>

</services>
