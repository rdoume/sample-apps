<services version='1.0'>
  <admin version="2.0">
      <adminserver hostalias="admin0"/>
      <configservers>
        <configserver hostalias="admin0"/>
        </configservers>

  <slobroks>
    <slobrok hostalias="stateless0" />
  </slobroks>

    </admin>

  <container id='container' version='1.0'>
    <search/>
    <document-api/>
    <nodes>
      <node hostalias="stateless0"/>
      <node hostalias="stateless1"/>
      <node hostalias="stateless2"/>
      <node hostalias="stateless3"/>
      <node hostalias="stateless4"/>
    </nodes>
  <config name="config.docproc.docproc">
    <numthreads>96</numthreads>
  </config>
    <config name="search.config.qr-start">
      <jvm>
       <heapsize>15000</heapsize>
      </jvm>
     </config>
  </container>

  <content id='site' version='1.0'>
    <redundancy>2</redundancy>
    <search>
      <visibility-delay>1.0</visibility-delay>
    </search>
    <documents>
      <document mode='index' type='site'/>
    </documents>

    <nodes>
      <node hostalias="content0" distribution-key="0"/>
      <node hostalias="content1" distribution-key="1"/>
      <node hostalias="content2" distribution-key="2"/>
      <node hostalias="content3" distribution-key="3"/>
      <node hostalias="content4" distribution-key="4"/>
    </nodes>

    <engine>
      <proton>
        <searchable-copies>1</searchable-copies>
        <resource-limits>
          <disk>0.99</disk>
          <memory>0.95</memory>
         </resource-limits>
      <tuning>
        <searchnode>
        <feeding>
          <concurrency>0.8</concurrency>
        </feeding>
        </searchnode>
     </tuning>
      </proton>
    </engine>
  </content>

</services>

