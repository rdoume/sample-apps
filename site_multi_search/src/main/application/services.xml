<services version='1.0'>
  <admin version="2.0">
      <adminserver hostalias="admin0"/>
      <configservers>
        <configserver hostalias="admin0"/>
        </configservers>
    </admin>

  <container id='container' version='1.0'>
    <config name="config.docproc.docproc">
    	<numthreads>64</numthreads>
    </config>
     <config name="search.config.qr-start">
    <jvm>
      <heapsize>8192</heapsize>
    </jvm>
  </config>
    <search/>
    <document-api/>
    <nodes>
      <node hostalias="stateless1"/>
    </nodes>
    <document-processing preferlocalnode="true"/>
  </container>

  <content id='site' version='1.0'>
    <redundancy>1</redundancy>
    <search>
      <visibility-delay>30</visibility-delay>
    </search>
    <documents>
      <document mode='index' type='site'/>
    </documents>
    <tuning>
	<bucket-splitting max-documents="16000" max-size="1024000000"/>
    </tuning>
    <nodes>
      <node hostalias="content2" distribution-key="2"/>
    </nodes>

    <engine>
      <proton>
        <searchable-copies>1</searchable-copies>
        <visibility-delay>30</visibility-delay>
        <resource-limits>
          <disk>0.99</disk>
          <memory>0.95</memory>
         </resource-limits>
      <tuning>
        <searchnode>
        <feeding>
          <concurrency>0.8</concurrency>
        </feeding>
	<index>
		<io>
			<write>normal</write>
			<read>normal</read>
		</io>
	</index>
	<summary>
		<io>
			<write>normal</write>
		</io>
		<store>
			<cache>
				<compression>
					<type>lz4</type>
				</compression>
			</cache>
			<logstore>
				<chunk>
					<compression>
						<type>lz4</type>
					</compression>
				</chunk>
			</logstore>
		</store>
	</summary>
        </searchnode>
     </tuning>
      </proton>
    </engine>
  </content>

</services>
